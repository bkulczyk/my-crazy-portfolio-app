= search_form_for @q, html: { class: 'form-inline' } do |f|
  .row 
    .col
      = f.search_field :title_cont, class: 'form-control', placeholder: 'Write something here...'
    .col
      = f.submit 'Search', class: 'btn btn-primary'
    .col.text-end
      = link_to new_item_path, class: 'btn btn-primary' do
        +
%br
.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Title
        %th Description
        %th Content
        %th Show on portfolio
        %th Show on blog
        %th Show in calendar
        %th Start
        %th End
        %th Archive
        %th
    %tbody
      - @items.each do |item|
        = content_tag :tr, id: dom_id(item), class: dom_class(item) do
          %td= item.title
          %td= item.description
          %td= item.wysiwyg
          %td= item.show_on_portfolio
          %td= item.show_on_blog
          %td= item.show_in_calendar
          %td= item.start
          %td= item.end
          %td= item.archive
          %td= link_to 'Show', item
= will_paginate @items
